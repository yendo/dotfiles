syntax on
"highlight LineNr ctermfg=grey ctermbg=white
"highlight StatusLine ctermbg=black ctermfg=gray
"set number
set laststatus=2
set incsearch
set hlsearch
set ignorecase
set smartcase
set autoindent
set ambiwidth=double
set spell
set spelllang=en,cjk
set spellfile=$HOME/.vim/spell/en.utf-8.add
